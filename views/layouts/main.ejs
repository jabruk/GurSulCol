  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
  <link rel="stylesheet" href="/css/styles.css">
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
  <style>
    #map {
      height: 400px;
      width: 100%;
    }

  </style>
</head>
</head>
<body>
  
  <div class="container-xxl px-md-5 bg-white shadow-lg">

    <header class="d-flex flex-wrap align-items-center justify-content-center justify-content-md-between py-3 mb-4 border-bottom">
      <a href="/" class="d-flex align-items-center col-md-3 mb-2 mb-md-0 text-dark text-decoration-none">
        <img src="/img/logo.png" width="229" height="68" alt="ITSHOP - anything for you heart">
      </a>

      <ul class="nav col-12 col-md-auto mb-2 justify-content-center mb-md-0">
        <li><a href="/" class="nav-link px-2 link-secondary">Home</a></li>
        <% if (!currentUser) { %>
          <li><a href="/signin" class="nav-link px-2 link-secondary">Sign In</a></li>
          <li><a href="/signup" class="nav-link px-2 link-secondary">Sign Up</a></li>
        <% } else { %>
          <div class="dropdown show">
            <a class="btn btn-outline-success dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <i class="bi bi-person"><%= currentUser.username %></i>
            </a>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
              <a href="/logout" class="nav-link px-2 link-secondary">Logout</a>
              <a href="/cabinet" class="nav-link px-2 link-secondary">Cabinet</a>
            </div>
          </div>
          <% if (currentUser.role==='admin') { %>
          <li><a href="/submit-device" class="nav-link px-2 link-secondary">Submit</a></li>
          <% } %>
        <% } %>
        <a href="/cart" class="nav-link px-2 link-secondary">
          <div class="icon-container">
            <i class="bi bi-cart"></i>
            <span class="icon-badge"><%= countCartItems %></span>
          </div>
        </a>

      </ul>

      <div class="col-md-3 text-end">
        <form method="POST" action="/search">
          <input type="search" name="searchTerm" class="form-control" placeholder="Search..." aria-label="Search">
        </form>
      </div>
    </header>

    <main>
      <%- body -%>
    </main>

    <!-- Copyrights -->
    <footer>
    <div class="bg-light py-4" style="margin-top: 25px">
      <div class="container text-center">
        <p class="text-muted mb-0 py-2">Copyright Â© 2023 Gurban, Sultan. All rights reserved. </p>
      </div>
      <div class="rounded-social-buttons">
        <a class="social-button facebook" href="https://www.facebook.com/" target="_blank"><i class="fab fa-facebook-f"></i></a>
        <a class="social-button twitter" href="https://www.twitter.com/" target="_blank"><i class="fab fa-twitter"></i></a>
        <a class="social-button linkedin" href="https://www.linkedin.com/" target="_blank"><i class="fab fa-linkedin"></i></a>
        <a class="social-button instagram" href="https://www.instagram.com/" target="_blank"><i class="fab fa-instagram"></i></a>
      </div>
    </div>
    </footer>
    <!-- End -->

  </div>
  <script defer src="https://use.fontawesome.com/releases/v5.0.13/js/all.js" integrity="sha384-xymdQtn1n3lH2wcu0qhcdaOpQwyoarkgLVxC/wZ5q7h9gHtxICrpcaSUfygqZGOe" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ" crossorigin="anonymous"></script>
